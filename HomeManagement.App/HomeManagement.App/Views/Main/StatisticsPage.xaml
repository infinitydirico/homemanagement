                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="5, 5, 5, 5">
                                <StackLayout>
                                    <charts:LineChart Series="{Binding .}" TextSize="12" RenderArea="True"
                                                     BackgroundColor="#303030" HeightRequest="150" />
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>