<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeManagement.App.Views.Main.StatisticsPage"
             BackgroundColor="{StaticResource TabBarColor}"
             Icon="bar_chart.png"
             xmlns:charts="clr-namespace:Nightingale.Charts;assembly=Nightingale">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand">
            <Frame BackgroundColor="{StaticResource LayoutDark}" Margin="5, 5, 5, 5">
                <charts:BarChart x:Name="barChart" Values="{Binding ChartValues}" 
                                 TextSize="25" BackgroundColor="#303030" HeightRequest="150" />
            </Frame>

            <Frame BackgroundColor="{StaticResource LayoutDark}" Margin="5, 5, 5, 5">
                <charts:PieChart x:Name="pieChart" Values="{Binding ChartValues}" 
                                 TextSize="25" BackgroundColor="#303030" HeightRequest="150" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>