<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeManagement.App.Views.Charges.ChargesList"
             xmlns:Conv="clr-namespace:HomeManagement.App.Converters"
             xmlns:Beh="clr-namespace:HomeManagement.App.Behaviours"
             xmlns:Controls="clr-namespace:HomeManagement.App.Views.Controls"
             BackgroundColor="{StaticResource TabBarColor}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Conv:ChargeTypeColorConverter x:Key="ChargeTypeColor" />
            <Conv:DateConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="add_48dp.png" Clicked="OnAddChargeCommand" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="5, 5, 5, 5">
                <StackLayout>
                    <ListView x:Name="chargesList" ItemsSource="{Binding Charges}" 
                                IsVisible="{Binding !IsBusy}" RowHeight="70"
                                IsPullToRefreshEnabled="False" RefreshCommand="{Binding RefreshCommand}"
                                SeparatorVisibility="None" IsRefreshing="{Binding IsBusy}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View BackgroundColor="{StaticResource LayoutDark}">
                                        <StackLayout Orientation="Horizontal">
                                            <StackLayout.GestureRecognizers>
                                                <SwipeGestureRecognizer Direction="Right" Swiped="Swiped" />
                                                <SwipeGestureRecognizer Direction="Left" Swiped="Swiped" />
                                                <SwipeGestureRecognizer Direction="Down" Swiped="Swiped" />
                                                <SwipeGestureRecognizer Direction="Up" Swiped="Swiped" />
                                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                            </StackLayout.GestureRecognizers>
                                            <Button Image="red_trash_xs.png" VerticalOptions="Start"
                                                    WidthRequest="30" HeightRequest="30" IsVisible="False"
                                                    BackgroundColor="{StaticResource ControlLight}" Clicked="Delete" />
                                            <Button Image="edit_xs.png" VerticalOptions="Start" 
                                                    WidthRequest="30" HeightRequest="30" IsVisible="False" 
                                                    BackgroundColor="{StaticResource ControlLight}" Clicked="Edit"/>
                                            <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">
                                                <Label Text = "{Binding Name}"  />
                                                <Label Text = "{Binding Date, Converter={StaticResource DateConverter}}" />
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                                                <Label Text = "{Binding Price}" TextColor="{Binding ChargeType, Converter={StaticResource ChargeTypeColor}}" FontSize="Small" />
                                            </StackLayout>
                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>

            <Frame Margin="5, 5, 5, 5">
                <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
                    <StackLayout HorizontalOptions="Start">
                        <Button Image="chart_36dp.png"
                            VerticalOptions="Center" 
                            WidthRequest="55" HeightRequest="55"
                            Clicked="OnViewAccountStatistics"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="Start">
                        <Button Image="calendar_36dp.png"
                            VerticalOptions="Center" 
                            WidthRequest="55" HeightRequest="55"
                            Clicked="OnViewChargesOnCalendar"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <StackLayout>
                            <Button Image="arrow_left_36dp.png"
                            VerticalOptions="Center" Command="{Binding PreviousPageCommand}" IsEnabled="{Binding NotBusy}" 
                            WidthRequest="55" HeightRequest="55" />
                        </StackLayout>

                        <StackLayout>
                            <Button Image="arrow_right_36dp.png"
                            VerticalOptions="Center" Command="{Binding NextPageCommand}" IsEnabled="{Binding NotBusy}"
                            WidthRequest="55" HeightRequest="55" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>