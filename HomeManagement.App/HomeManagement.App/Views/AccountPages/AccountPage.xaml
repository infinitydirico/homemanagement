<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeManagement.App.Views.AccountPages.AccountPage"
             xmlns:Conv="clr-namespace:HomeManagement.App.Converters"
             xmlns:Controls="clr-namespace:HomeManagement.App.Views.Controls"
             BackgroundColor="{StaticResource TabBarColor}"
             Title="{Binding AccountLabelText, Converter={StaticResource Translation}}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Conv:PositiveNegativeColorConverter x:Key="PositiveNegative" />
            <Conv:TranslationConverter x:Key="Translation" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="add.png" Clicked="NavigateToAddAccount" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Frame Margin="5, 5, 5, 5" BackgroundColor="{StaticResource LayoutDark}">            
            <ListView x:Name="accountsList" ItemsSource="{Binding Accounts}" 
                      Margin="10,10,10,10" SeparatorVisibility="None"
                      IsPullToRefreshEnabled="True" RefreshCommand="{Binding RefreshCommand}" ItemTapped="ViewChargesList" 
                      IsRefreshing="{Binding IsBusy}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <SwipeGestureRecognizer Direction="Right" Swiped="SwipeGestureRecognizer_Swiped" />
                                    <SwipeGestureRecognizer Direction="Left" Swiped="SwipeGestureRecognizer_Swiped" />
                                    <SwipeGestureRecognizer Direction="Down" Swiped="SwipeGestureRecognizer_Swiped" />
                                    <SwipeGestureRecognizer Direction="Up" Swiped="SwipeGestureRecognizer_Swiped" />
                                    <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="TapGestureRecognizer_Tapped" />
                                </StackLayout.GestureRecognizers>
                                <Button Image="red_trash_xs.png" VerticalOptions="Center"
                                        WidthRequest="30" HeightRequest="30" IsVisible="False"
                                        BackgroundColor="{StaticResource ControlLight}" />
                                <Button Image="edit_xs.png" VerticalOptions="Center" 
                                       WidthRequest="30" HeightRequest="30" IsVisible="False" 
                                        BackgroundColor="{StaticResource ControlLight}"/>
                                
                                <!--<Image Source="red_trash.png" VerticalOptions="Center" 
                                       WidthRequest="25" HeightRequest="25" IsVisible="False" />
                                <Image Source="edit.png" VerticalOptions="Center" 
                                       WidthRequest="25" HeightRequest="25" IsVisible="False" />-->
                                <Label VerticalOptions="Center" Text = "{Binding Name}" TextColor="White"/>
                                <Label VerticalOptions="Center" Text = "{Binding Balance}" 
                                       TextColor="{Binding Balance, Converter={StaticResource PositiveNegative}}" 
                                       HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </ContentPage.Content>
</ContentPage>